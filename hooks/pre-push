#!/bin/bash

# Pre-push hook to run lint checks before pushing

set -e

echo "ğŸ” Running pre-push checks..."

# Check formatting
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Code formatting check failed!"
    echo "ğŸ’¡ Run 'cargo fmt --all' to fix formatting issues"
    exit 1
fi
echo "âœ… Code formatting check passed"

# Run clippy
echo "ğŸ”§ Running clippy..."
if ! cargo clippy --all-features --workspace -- -D warnings; then
    echo "âŒ Clippy check failed!"
    echo "ğŸ’¡ Fix the clippy warnings before pushing"
    exit 1
fi
echo "âœ… Clippy check passed"

echo "âœ¨ All pre-push checks passed!"
